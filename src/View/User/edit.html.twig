{% extends 'layout.html.twig' %}

{% block content %}
    {% include 'User/_navbar_profile.html.twig' %}

    <h1 class="text-center mt-2 pt-4 main-text-color">Edition des informations de l'étudiant</h1>

    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center mx-auto">
                <div class="col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25">
                                        <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image">
                                    </div>
                                    <h6 class="fs-6 f-w-600">Bonjour {{ user.firstname }}</h6>
                                    <p class="fs-6">Votre statut : {{ user.is_admin }}</p>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                                            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                                        </svg>
                                        <div>Tous les champs marqués d'un astérix (*) sont requis.</div>
                                    </div>
                                    <form method="post">
                                        <input type="hidden" value="{{ user.id }}" name="id">
                                        <h6 class="m-b-20 p-b-5 b-b-default f-w-600 pt-4">INFORMATIONS PERSONNELLES</h6>
                                        <div class="row">
                                            <div class="col">
                                                <p class="m-b-10 f-w-600">Identité</p>
                                                <div class="row g-md-3">
                                                    <div class="col-sm-3 col-md-4">
                                                        <label for="firstname" name="firstname">Prénom *</label>
                                                        <input type="text" class="form-control" value="{{ user.firstname }}" name="firstname" id="firstname" required>
                                                    </div>
                                                    <div class="col-sm-3 col-md-4">
                                                        <label for="lastname" name="lastname">Nom *</label>
								                        <input type="text" class="form-control" value="{{ user.lastname }}" name="lastname" id="lastname" required>
                                                    </div>
                                                    <div class="col-sm-6 col-md-4">
                                                        <label for="email" name="email">E-mail *</label>
							                            <input type="text" class="form-control" value="{{ user.email }}" name="email" id="email" required>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600 pt-4">MOT DE PASSE DE CONNEXION</h6>
                                            <div class="alert alert-light d-flex align-items-center text-danger text-center mx-auto" role="alert" id="alert-password-modify">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-info-circle-fill flex-shrink-0 text-center ms-3 me-2" viewBox="0 0 16 16">
                                                    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
                                                </svg>
                                                <div>Vous devez indiquer votre mot de passe seulement si vous souhaitez le modifier</div>
                                        </div>
                                        <div class="row g-2">
                                            <div class="col-sm-6">
                                                <label for="password" name="password">Mot de passe *</label>
								                <input type="password" class="form-control" value="" placeholder="********" name="password" id="password" required>
                                            </div>
                                            <div class="col-sm-6">
                                                <label for="password2" name="password2">Confirmez le mot de passe *</label>
								                <input type="password" class="form-control" value="" placeholder="********" name="password2" id="password2" required>
                                            </div>
                                        </div>
                                        <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600 pt-4">DONNEES DE CONTACT</h6>
                                        <div class="row g-2">
                                            <div class="col-sm-6">
                                                <label for="address" name="address">Adresse postale</label>
							                    <textarea class="form-control" name="address" id="address" rows="4">{{ user.address }}</textarea>
                                            </div>
                                            <div class="col-sm-6">
                                                <label for="telephone">Téléphone</label>
                                                <input class="form-control" type="text" id="telephone" placeholder="01 23 45 67 89" aria-label="01 23 45 67 89" disabled>
                                            </div>
                                        </div>
                                        <div class="border-top mt-5 mb-3 pt-4">
                                            <div class="container-flui d-flex justify-content-center">
                                                <div class="col-auto">
                                                    <a href="/profile?id={{ user.id }}" class="btn profile-btn rounded submit px-4 mx-2" role="button">Annuler</a>
                                                </div>
                                                <div class="col-auto">
                                                    <button type="submit" class="btn profile-btn rounded submit px-2 mx-2">Mettre à jour</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
